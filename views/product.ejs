<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!--Third-party resources-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        
        <!--Internal resources-->
        <link rel="stylesheet" href="/static/styles/product.css">
        <script src="/static/scripts/product.js"></script>
    </head>
    <body>
        <% if (typeof userType != 'undefined') { %>
            <% if (userType == 'CLIENT') { %>
                <%-include('partials/client-navbar')%>
            <% } else if (userType == 'ORGANISATION') { %>
                <%-include('partials/organisation-navbar')%>
            <% } %>
        <% } else { %>
            <%-include('partials/generic-navbar')%>
        <% } %>
        <div class="container">
            <div class="row">
                <div class="col flex-grow-1"></div>
                <div class="col">
                    <p id="product-name" class="fs-1"><%=name%></p>
                </div>
                <div class="col flex-grow-1"></div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="container-image">
                        <img id="product-image" src="data:image/jpg;base64,<%= item.thumbnail%>"/>
                    </div>
                </div>
                <div class="col">
                    <p id="product-description"><%=description%><p>
                    <button id="btn-buy" class="btn btn-outline-success">BUY</button>
                </div>
            </div>
        </div>
    </body>
</html>