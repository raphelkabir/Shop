<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!--Third-party resources-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        
        <!--Internal resources-->
        <link rel="stylesheet" href="/static/styles/signup.css">
        <script src="/static/scripts/signup.js"></script>
    </head>
    <body>
        <div class="container">
          <div class="container d-flex h-100 flex-column">
            <div class="flex-grow-1"></div>
            <div class="row justify-content-center">
                <div id="form-container" class="col-3">
                  <form id="form-register">
                    <div id="form-email" class="form-group">
                      <label for="input-email">Email</label>
                      <input id="input-email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div id="form-password" class="form-group">
                      <label for="input-password">Password</label>
                      <input id="input-password" type="password" class="form-control" placeholder="Password">
                    </div>
                    <div id="buttons-container" class="container">
                      <div class="row">
                        <div class="col flex-grow-1"></div>
                        <div class="col">
                          <button id="btn-signup" type="submit" class="btn btn-primary">Signup</button>
                        </div>
                      </div>
                      <div class="row flex-grow-1"></div>
                      <div class="row">
                        <div class="col" style="min-width: 161px; margin: 80px 0px 0px 0;">
                          <a href="/login">Already registered?</a>
                        </div>
                        <div class="col flex-grow-1"></div>
                      </div>
                    </div>
                  </form>
                </div>
            </div>
            <div class="flex-grow-1"></div>
        </div>
        </div>
    </body>
</html>